# Backend Environment Variables

# Server Configuration
PORT=3000

# Firebase Configuration (Base64 encoded service account key)
SERVICE_ACCOUNT_KEY_BASE64=your_base64_encoded_service_account_key_here

# Game Configuration
# Distance in meters for valid question interaction
VALID_DISTANCE_RADIUS=50

# Duplicate submission prevention (milliseconds)
SUBMISSION_COOLDOWN_MS=3000

# Rate Limiting
# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100
# Time window in minutes
RATE_LIMIT_WINDOW_MINUTES=15
